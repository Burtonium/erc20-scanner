    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.8.8",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.3.0",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.3.3"
