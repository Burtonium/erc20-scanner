    "dev": "yarn dev:wss & next dev",
    "start": "cross-env NODE_ENV=production node dist/server/prodServer.js",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" src"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.14.1",
    "@tanstack/react-query": "^5.0.0",
