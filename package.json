    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "clsx": "^2.0.0",
    "next": "^14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spring": "^9.7.3",
    "superjson": "^1.12.4",
    "tsx": "^4.0.0",
    "web3": "^4.4.0",
    "ws": "^8.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.0.0",
